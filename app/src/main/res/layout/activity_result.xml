<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context=".ui.ActivityResult"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/blue"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Result"
                android:textColor="@color/white"
                android:textSize="24dp" />
            <LinearLayout
                android:id="@+id/spinnerYearLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/spinnerackground"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                >


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerYearSelection"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:backgroundTint="@color/black"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/spinnerTermLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/spinnerackground"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                >


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerSelectTerm"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:backgroundTint="@color/black"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnGetResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tvClassSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="classes"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                />

            <TextView
                android:id="@+id/tvPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Pass"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvFail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Fail"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Percentage"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            />



    </LinearLayout>

</ScrollView>