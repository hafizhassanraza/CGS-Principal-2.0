<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/message_box_header"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:text="name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/message_box_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="reg. no."
                android:fontFamily="@font/montserrate_semi_bold"
                android:textAlignment="center"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/remarkDetails"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Enter remarks here"
                android:background="@drawable/edittext_background"
                android:layout_marginVertical="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbNegative"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Negative"
                    android:textSize="9dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginVertical="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/montserrate_semi_bold"
                    android:background="@drawable/radio_button_background"
                    android:button="@color/white"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:id="@+id/rbPositive"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Positive"
                    android:textSize="9dp"
                    android:padding="5dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/montserrate_semi_bold"
                    android:background="@drawable/radio_button_background"
                    android:button="@color/white"
                    android:textColor="@color/black"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/remarkAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*select the remark type"
                android:textColor="@color/red"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/remarkDetailAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*enter the remarks"
                android:textColor="@color/red"
                android:visibility="gone"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Save"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                android:fontFamily="@font/montserrate_semi_bold"
                android:backgroundTint="#1b66c9"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>